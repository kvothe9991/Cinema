<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Cine++</title>
    @Styles.Render("~/css")
    @Scripts.Render("~/bundles/jquery")
</head>
<body>
    <div class="navbar navbar-expand navbar-dark bg-dark">
        <div class="container-fluid">
            <a class="navbar-brand" href="/">Cine++</a>
            <div class="collapse navbar-collapse">
                <ul class="navbar-nav">
                    <li class="nav-item">@Html.ActionLink("About", "About", "Home", null, new { @class = "nav-link" })</li>
                    <li class="nav-item">@Html.ActionLink("Socios", "Index", "Socios", null, new { @class = "nav-link" })</li>
                    <li class="nav-item">@Html.ActionLink("Admin", "Index", "Admin", null, new { @class = "nav-link" })</li>
                    <li class="nav-item">@Html.ActionLink("Filme", "Index", "Filme", null, new { @class = "nav-link" })</li>
                    <li class="nav-item">@Html.ActionLink("Estadísticas", "Index", "Estadisticas", null, new { @class = "nav-link" })</li>
                </ul>
            </div>
        </div>
    </div>
    @RenderSection("scripts", required: false)
    <div class="container">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Cine++</p>
        </footer>
    </div>

</body>
</html>